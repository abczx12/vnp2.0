
-- Äáº·t script nÃ y trong ServerScriptService

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local ChatService = ReplicatedStorage:WaitForChild("DefaultChatSystemChatEvents"):WaitForChild("SayMessageRequest")

-- Danh sÃ¡ch cÃ¡c thÃ´ng bÃ¡o vui nhá»™n
local messages = {
    "Con Xin Lá»—i Bá»‘ VNPWğŸ˜­ğŸ™ tá»« nay con khÃ´ng spam ná»¯a",
}

-- HÃ m gá»­i thÃ´ng bÃ¡o
local function sendFunnyMessage()
    local randomMessage = messages[math.random(1, #messages)]
    for _, player in pairs(Players:GetPlayers()) do
        ChatService:FireClient(player, randomMessage, "All")
    end
end


while true do
    sendFunnyMessage()
    task.wait(0)
end
